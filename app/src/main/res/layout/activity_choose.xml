<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChooseActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarChoose"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/teal_700"
        app:title="@string/signUp"
        app:titleTextColor="@color/white" />

    <!-- Start Background for Page -->
    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/toolbarChoose"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/design6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/toolbarChoose"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/design5" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/home"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/arabic" />

    <!-- End Background for Page-->

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background"
            android:layout_margin="@dimen/_15sdp"
            android:text="@string/question"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/_15ssp" />

        <Button
            android:id="@+id/hospital"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_below="@+id/textView"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:onClick="registrationForHospital"
            android:text="@string/hospital"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_below="@+id/hospital"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:onClick="registrationForPatient"
            android:text="@string/patient"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"/>
</RelativeLayout>