<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegistrationActivity">

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBar"
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/teal_700"
        app:title="@string/signUp"
        app:titleTextColor="@color/white" />
  </com.google.android.material.appbar.AppBarLayout>

  <!-- Start Background for Page -->
  <View
      android:id="@+id/background"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_130sdp"
      android:layout_below="@id/appBar"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:background="@drawable/design6" />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/_115sdp"
      android:layout_below="@id/appBar"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:background="@drawable/design5" />

  <ImageView
      android:id="@+id/image"
      android:layout_width="@dimen/_40sdp"
      android:layout_height="@dimen/_40sdp"
      android:layout_below="@id/appBar"
      android:layout_centerInParent="true"
      android:layout_marginTop="@dimen/_25sdp"
      android:src="@drawable/home"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/image"
      android:layout_centerInParent="true"
      android:text="@string/app_name"
      android:textColor="@color/white"
      android:textSize="@dimen/_15ssp"
      android:fontFamily="@font/arabic" />
  <!-- End Background for Page-->

  <androidx.cardview.widget.CardView
      android:id="@+id/card"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_90sdp"
      android:layout_marginHorizontal="@dimen/_25sdp"
      android:layout_marginTop="@dimen/_10sdp"
      android:layout_below="@+id/background"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:cardCornerRadius="@dimen/_2sdp"
      app:civ_border_color="?attr/colorControlNormal"
      app:cardElevation="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/Profile"
          android:layout_width="@dimen/_50sdp"
          android:layout_height="@dimen/_50sdp"
          android:clickable="true"
          android:onClick="pick"
          android:src="@drawable/person"
          app:civ_border_width="@dimen/_1sdp" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/box1"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/card"
      android:layout_marginHorizontal="@dimen/_25sdp"
      android:layout_marginTop="@dimen/_10sdp"
      android:hint="@string/name"
      app:boxStrokeWidth="@dimen/_1sdp"
      app:counterEnabled="true"
      app:endIconMode="clear_text"
      app:errorEnabled="true"
      app:errorIconDrawable="@drawable/error"
      app:startIconDrawable="@drawable/person">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textEmailAddress"
        android:textColor="?attr/colorControlNormal" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/box2"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/box1"
      android:layout_marginHorizontal="@dimen/_25sdp"
      android:hint="@string/telephone"
      app:boxStrokeWidth="@dimen/_1sdp"
      app:counterEnabled="true"
      app:prefixText="02"
      app:endIconMode="clear_text"
      app:errorEnabled="true"
      app:errorIconDrawable="@drawable/error"
      app:startIconDrawable="@drawable/telephone">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Telephone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="phone"
        android:textColor="?attr/colorControlNormal" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/box3"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/box2"
      android:layout_marginHorizontal="@dimen/_25sdp"
      android:hint="@string/Password"
      app:counterEnabled="true"
      app:boxStrokeWidth="@dimen/_1sdp"
      app:endIconMode="password_toggle"
      app:errorEnabled="true"
      app:errorIconDrawable="@drawable/error"
      app:startIconDrawable="@drawable/lock">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textPassword"
        android:textColor="?attr/colorControlNormal" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/box4"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/box3"
      android:layout_marginHorizontal="@dimen/_25sdp"
      android:hint="@string/confirmPassword"
      app:counterEnabled="true"
      app:boxStrokeWidth="@dimen/_1sdp"
      app:endIconMode="password_toggle"
      app:errorEnabled="true"
      app:errorIconDrawable="@drawable/error"
      app:startIconDrawable="@drawable/lock">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textPassword"
        android:textColor="?attr/colorControlNormal" />
  </com.google.android.material.textfield.TextInputLayout>

  <Button
      android:id="@+id/next"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_50sdp"
      android:layout_below="@id/box4"
      android:layout_marginHorizontal="@dimen/_25sdp"
      android:text="@string/next"
      android:onClick="next"
      android:textSize="@dimen/_15ssp"/>
</RelativeLayout>
