<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:background="?selectableItemBackground">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileOfDoctor"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@color/teal_700"
            android:background="?actionBarItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/nameDoctor"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:maxLines="1"
            tools:text="@string/appName"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profileOfDoctor"/>
        <TextView
            android:id="@+id/lastMessage"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:maxLines="1"
            tools:text="@string/appName"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            android:textColor="@color/hint"
            app:layout_constraintTop_toBottomOf="@+id/nameDoctor"
            app:layout_constraintStart_toEndOf="@+id/profileOfDoctor" />

        <TextView
            android:id="@+id/lastTime"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:maxLines="1"
            tools:text="Today at 10:02PM"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            android:textColor="@color/hint"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            tools:src="@drawable/no_seen"
            android:contentDescription="@string/seenMessage"
            app:layout_constraintTop_toBottomOf="@+id/lastTime"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>