<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.home.patient.SearchPatientActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/box8"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:hint="@string/search_hint"
        app:boxStrokeWidth="@dimen/_1sdp"
        app:counterEnabled="true"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:prefixText="@string/code"
        app:startIconDrawable="@drawable/search"
        tools:layout_editor_absoluteY="95dp"
        tools:ignore="MissingConstraints">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="?attr/colorControlNormal" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/searchByName"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginStart="80dp"
        android:text="@string/serbyname"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="494dp" />

    <Button
        android:id="@+id/searchByPhoto"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginStart="80dp"
        android:text="@string/searphoto"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="411dp" />

    <Button
        android:id="@+id/searchByBarcode"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginStart="80dp"
        android:text="@string/serparcod"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="317dp" />

    <Button
        android:id="@+id/searchByDisease"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginStart="80dp"
        android:text="@string/seardiese"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="231dp" />
</androidx.constraintlayout.widget.ConstraintLayout>